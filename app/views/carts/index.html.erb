<h1>Listing carts</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @carts.each do |cart| %>
  <tr>
	<td><%= cart.id %></td>
	<td><%= User.find(cart.user.id).email %></td>
	<td><%= cart.line_items.count%></td>
    <td><%= link_to 'Show', cart %></td>
    <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
    <td><%= link_to 'Destroy', cart, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Cart', new_cart_path %>
