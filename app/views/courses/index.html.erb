<h1>YLS courses</h1>

<table>
  <tr>
    <th><%= sortable 'name' %></th>
    <th><%= sortable 'number' %></th>
    <th><%= sortable 'instructor' %></th>
    <th><%= sortable 'room' %></th>
    <th><%= sortable 'day' %></th>
    <th><%= sortable 'units' %></th>
    <th><%= sortable 'time' %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.number %></td>
    <td><%= course.instructor %></td>
    <td><%= course.room %></td>
    <td><%= course.day %></td>
    <td><%= course.units %></td>
    <td><%= course.time %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

