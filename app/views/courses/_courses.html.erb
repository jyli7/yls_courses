<div id="courses_container">
	<div id="first_row"> 
		<span id="name_header"><%= sort_link @search, :name, "Course Name", :remote => true %></span>
		<span id="icons_header"></span>
		<span id="instructor_header"><%= sort_link @search, :instructor, "Instructor", :remote => true %></span>
		<span id="day_header"><%= sort_link @search, :day_num, "Day", :remote => true %></span>
		<span id="time_header"><%= sort_link @search, :time_num, "Time", :remote => true %></span>			
		<span id="units_header"><%= sort_link @search, :units_alt, "Units", :remote => true %></span>
		<span id="limitations_header"><%= sort_link @search, :limitations,  {:default_order => :desc}, :remote => true  %></span>
		<span id="exam_header"><%= sort_link @search, :exam_type, "Exam",  {:default_order => :desc}, :remote => true   %></span>
		<span id="paper_header"><%= sort_link @search, :paper_type, "Paper",  {:default_order => :desc}, :remote => true  %></span>
	</div>

	<% if @courses.blank? %>
		<p id="no_courses">No courses found</p>
	<% end %>

	<div id="below_first_row">

	<% for course in @courses %>
		<div class="other_rows">		
			<span class="name_body"><a class="course_name_click" href='#'><%= course.name %></a></span>
			<span class="icons">
				<span class="eval_body">
				<% if course.crn.blank? %>
				<% else %>
					<span class="eval_link">
					<%= link_to image_tag("chart.png", :border=>0, :align=>"absbottom", :title=>"Course evaluations", :height=>20, :width=>20), course %></span>
					<span id="lightbox"></span>
				<% end %>
				</span>
				<% if user_signed_in? %>			
				<span class="cart_body">
						<%= form_for(@line_item, :remote => true) do |f| %>
							<%= f.hidden_field :course_id, :value => course.id %> 
							<span class="cart_add<%= '_hidden' if @courses_in_cart.has_key?(course) %>" title="Add to cart" id="<%="#{course.id}"%>"><%= image_submit_tag("shopping_cart.png", :border=>0, :align=>"absbottom", :height=>20, :width=>20) %></span>
						<% end %>
				</span>
				<% end %>
			</span>
		
			<span class="instructor_body"><%= course.instructor %></span>
			<span class="day_body"><%= course.day %></span>
			<span class="time_body"><%= course.time %></span>			
			<span class="units_body"><%= course.units_alt %></span>
			<span class="limitations_body"><%= course.limitations %></span>
			<span class="exam_body"><%= course.exam_type %></span>
			<span class="paper_body"><%= course.paper_type %></span>

		</div>
		<p class="descrip_body">
			<%= course.descrip %>
		</p>
	<% end %>
	</div>
</div>